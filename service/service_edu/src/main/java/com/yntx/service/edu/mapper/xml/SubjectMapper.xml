<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yntx.service.edu.mapper.SubjectMapper">
    <resultMap id="nestedSubject" type="com.yntx.service.edu.entity.vo.SubjectVo">
    <id property="id" column="id"/>
    <result property="title" column="title"/>
    <result property="sort" column="sort" />
    <collection property="children"
                ofType="com.yntx.service.edu.entity.vo.SubjectVo"
                select="selectNestedListByParentId"
                column="id"/>
</resultMap>

<select id="selectNestedListByParentId" resultMap="nestedSubject">
    select id, sort, title from edu_subject where parent_id = #{parentId}
</select>
</mapper>
